generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  reminders Reminder[]
  createdAt DateTime   @default(now())
}

model Reminder {
  id     String @id @default(uuid())
  userId String

  content    String
  expires_at DateTime
  created_at DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
